<Window x:Class="idz9_math_logic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:idz9_math_logic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="White" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Введите логическое выражение" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="17"/>
        <TextBox x:Name="textBoxE2" Grid.Column="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="470" FontSize="17" Margin="0,58,0,0" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
        <Button Content="Получить результат" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click" Grid.ColumnSpan="2" Width="276" Grid.RowSpan="2" Margin="0,61,0,0" Height="22"/>
        <DataGrid x:Name="TruthTableDataGrid" AutoGenerateColumns="True" Margin="0,43,0,0" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="5" FontSize="20"/>
        <Label Content="Таблица истинности" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="17" Margin="0,10,0,0" Grid.Row="1" />
        <Label Content="Только большие латинские буквы как переменные" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="12" Margin="5,4,0,0"/>
        <Label Content="Доступные операции: or; and; =>; ==; !" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="12" Margin="5,27,0,0"/>
        <Label Content="Логическое следование" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="17" Margin="10,0,0,0" Grid.Row="1"/>
        <Label Content="Введите две логичесих функции" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="17" Margin="10,50,0,0" Grid.Row="1" Grid.RowSpan="2"/>
        <TextBox x:Name="log1" Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="417" Grid.ColumnSpan="3" FontSize="15"/>
        <TextBox x:Name="log2" Grid.Column="2" HorizontalAlignment="Left" Margin="10,41,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="417" Grid.ColumnSpan="3" FontSize="15"/>
        <Button x:Name="logSledButton" Grid.Column="2" Content="Логическое следование" HorizontalAlignment="Left" Margin="10,73,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.RowSpan="2" Grid.ColumnSpan="3" Width="417" Click="logSledButton_Click"/>

    </Grid>
</Window>
